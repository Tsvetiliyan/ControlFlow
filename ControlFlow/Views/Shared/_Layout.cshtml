<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControlFlow</title>
    <link rel="stylesheet" href="~/css/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="nav">
        <div class="nav-content-container">
            <a asp-action="Index" class="logo">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 11l3 3L22 4" />
                    <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11" />
                </svg>
                Control Flow
            </a>

            <ul class="nav-links">
                <li class="nav-link-container">
                    <a asp-controller="Home" asp-action="Index" class="nav-link primary-btn">Home</a>
                </li>
                <li class="nav-link-container">

                    <div class="dropdown-container">
                        <a class="nav-link primary-btn dropdown-btn">
                            Feautures
                            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6" />
                            </svg>
                        </a>

                        <div class="dropdown-content-container">
                            <ul class="dropdown-content">
                                <li>
                                    <a asp-controller="Home" asp-action="HowItWorks" class="primary-btn">
                                        <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M3 3h18v18H3zM8 12h8" />
                                        </svg>
                                        How it works?
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                <li class="nav-link-container">
                    <a asp-controller="Home" asp-action="Pricing" class="nav-link primary-btn">Pricing</a>
                </li>
                <li class="nav-link-container">
                    <a asp-controller="Home" asp-action="Resources" class="nav-link primary-btn">Resources</a>
                </li>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-link-container">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48" height="48">
                                <circle cx="24" cy="24" r="22" fill="rgb(225, 236, 249)" />
                                <circle cx="24" cy="16" r="9" fill="rgb(37, 99, 235)" />
                                <path d="M24 28 Q24 48 24 48 Q10 48 10 36 Q10 28 24 28" fill="rgb(30, 58, 138)" />
                                <path d="M24 28 Q24 48 24 48 Q38 48 38 36 Q38 28 24 28" fill="rgb(30, 58, 138)" />
                            </svg>
                        </a>
                    </li>
                    <li class="nav-link-container">
                        <a asp-controller="Home" asp-action="LogOut" class="nav-link secondary-btn">
                            Log Out
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-link-container">
                        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link secondary-btn">Log In</a>

                    </li>
                }

            </ul>
        </div>
    </nav>
    <div class="main-container">
        <div role="main" class="pb-3">
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content-container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <h3>ControlFlow</h3>
                    <div class="social-links">
                        @*Not working -> No social medias for now*@
                        @* <a href="#" class="social-link">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                            </svg>
                        </a>
                        <a href="#" class="social-link">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                            </svg>
                        </a> *@
                    </div>
                </div>

                <div class="footer-links">
                    <h4>Product</h4>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Pricing">Pricing</a>
                        </li>
                    </ul>
                </div>

                <div class="footer-links">
                    <h4>Important Info</h4>
                    <ul>
                        <li><a asp-action="HowItWorks">How ControlFlow Works?</a></li>
                    </ul>
                </div>

                <div class="footer-links">
                    <h4>Resources</h4>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Resources">Documentation</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2025 TaskMaster. All rights reserved.</p>
            </div>
        </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false); *@
</body>
</html>
