@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles {
    <link rel="stylesheet" href="~/css/loginRegister.css" asp-append-version="true" />
}

<main class="container">
    <h1 class="heading">Create new Account!</h1>
    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

    <form id="account" method="post">
        <div class="credentials">
            <div class="credential-container">
                <label asp-for="Input.Email" class="label">Email</label>
                <input type="email" asp-for="Input.Email" class="input" placeholder="Enter your Email">
                <span asp-validation-for="Input.Email" class="validation-error"></span>
            </div>
            <div class="credential-container">
                <label asp-for="Input.Password" class="label">Password</label>
                <input type="password" asp-for="Input.Password" class="input" placeholder="Enter your Password">
                <span asp-validation-for="Input.Password" class="validation-error"></span>
            </div>
            <div class="credential-container">
                <label asp-for="Input.ConfirmPassword" class="label">Confirm Password</label>
                <input type="password" asp-for="Input.ConfirmPassword" class="input" placeholder="Confirm Your Password">
                <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
            </div>
        </div>
        <button id="registerSubmit" type="submit" class="secondary-btn" >Create Account</button>
    </form>
</main>


