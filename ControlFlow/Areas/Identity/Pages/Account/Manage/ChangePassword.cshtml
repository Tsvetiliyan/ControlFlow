@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
@section Styles {
    <link rel="stylesheet" href="~/css/changePassword.css" asp-append-version="true" />
}
<h3 class="title">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="page-container">
    <div class="form-container">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-error" role="alert"></div>
            <div class="input-wrapper">
                <input asp-for="Input.OldPassword" class="input-field" autocomplete="current-password" aria-required="true" placeholder=" " />
                <label asp-for="Input.OldPassword" class="input-label"></label>
                <span asp-validation-for="Input.OldPassword" class="validation-error"></span>
            </div>
            <div class="input-wrapper">
                <input asp-for="Input.NewPassword" class="input-field" autocomplete="new-password" aria-required="true" placeholder=" " />
                <label asp-for="Input.NewPassword" class="input-label"></label>
                <span asp-validation-for="Input.NewPassword" class="validation-error"></span>
            </div>
            <div class="input-wrapper">
                <input asp-for="Input.ConfirmPassword" class="input-field" autocomplete="new-password" aria-required="true" placeholder=" " />
                <label asp-for="Input.ConfirmPassword" class="input-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
            </div>
            <button type="submit" class="submit-button">Update password</button>
        </form>
    </div>
</div>
