@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Styles {
    <link rel="stylesheet" href="~/css/loginRegister.css" asp-append-version="true" />
}

<main class="container">
    <h1 class="heading">Welcome Back!</h1>
    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

    <form id="account" method="post">
        <div class="credentials">
            <div class="credential-container">
                <label asp-for="Input.Email" class="label">Email</label>
                <input type="email" asp-for="Input.Email" class="input" placeholder="Enter your Email">
                <span asp-validation-for="Input.Email" class="validation-error"></span>
            </div>
            <div class="credential-container">
                <label asp-for="Input.Password" class="label">Password</label>
                <input type="password" asp-for="Input.Password" class="input" placeholder="Enter your Password">
                <span asp-validation-for="Input.Password" class="validation-error"></span>
            </div>
        </div>
        <div class="remember-me">
            <label asp-for="Input.RememberMe" class="checkbox-label">
                <input asp-for="Input.RememberMe" class="checkbox-input" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <button id="registerSubmit" type="submit" class="secondary-btn">Login</button>
    </form>

    <div class="login-footer">
        <p class="footer-note">
            Forgot your password? 
            <a asp-page="./ForgotPassword" class="link">Reset it here</a>
        </p>
        <p class="footer-note">
            Don't have an account? 
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">Sign up now</a>
        </p>
        <p class="footer-note">
            Didn't Receive a Confirmation?
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link">Resend email confirmation</a>
        </p>
    </div>
</main>


